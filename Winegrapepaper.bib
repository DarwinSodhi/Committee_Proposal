file = {:Users/darwinsodhi/Downloads/Spear{\_}et{\_}al-2018-Ecology.pdf:pdf},
issn = {00129658},
journal = {Ecology},
keywords = {Avena barbata,Bromus diandrus,Bromus hordeaceus,Elymus glaucus,Janzen-Connell hypothesis,Stipa pulchra,multi-host pathogens,negative frequency dependence,plant pathogen,species coexistence},

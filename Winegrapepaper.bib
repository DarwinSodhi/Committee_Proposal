journal = {Philos. Trans. R. Soc. B Biol. Sci.},
keywords = {Allometry,Amplification effect,Dilution effect,Disease ecology,Habitat loss,Infectious disease dynamics,Multi-host},
number = {1722},
title = {{Null expectations for disease dynamics in shrinking habitat: Dilution or amplification?}},

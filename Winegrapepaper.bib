file = {:Users/darwinsodhi/Downloads/1-s2.0-S0925521400001186-main.pdf:pdf},
issn = {09255214},
journal = {Postharvest Biol. Technol.},
keywords = {Acremonium cephalosporium,Biocontrol,Candida guilliermondii,Grey mould,Vitis vinifera,Yeast},

doi = {10.1007/s10530-010-9890-9},
file = {:Users/darwinsodhi/Downloads/14066.pdf:pdf},
issn = {13873547},
journal = {Biol. Invasions},
keywords = {Aquaculture,Control,Fish,Pathways,Transmission,Virulence},
number = {6},
pages = {1291--1303},
title = {{Non-native aquatic animals introductions have driven disease emergence in Europe}},
